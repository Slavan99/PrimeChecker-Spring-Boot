{{> header}}
{{> navbar}}
{{message}}
<form action="/history" method="post" name="checkForm">
    <div>
        <label>
            Number to check :
            <input type="text" name="number"/>
        </label>
    </div>
    <div>
        <label> Algorithm :
            <select name="name" id="algoSelect">
                {{#algos}}
                    <option name="{{name}}">{{name}}</option>
                {{/algos}}
            </select>
        </label>
    </div>
    <div>
        <label>Iteration number :
            <input type="text" name="iterations"/>
        </label>
    </div>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
    <div><input type="submit" class="btn btn-primary" value="Check number"/></div>
</form>
<div class="yourHistory">
    <b>Your history</b>
</div>
{{#hashistory}}
    <table class="table">
        <thead>
        <tr>
            <th>Number</th>
            <th>Algorithm</th>
            <th>Iterations</th>
            <th>Check date and time</th>
            <th>Result</th>
        </tr>
        </thead>
        <tbody>
        {{#histories}}
            <tr>
                <td>{{number}}</td>
                <td>{{algorithm}}</td>
                <td>{{iterations}}</td>
                <td>{{checkDateTime.toLocalDate}} {{checkDateTime.toLocalTime}}</td>
                <td>{{result}}</td>
            </tr>
        {{/histories}}
        </tbody>
    </table>
    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="/history?page=0">1</a></li>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="/history?page=1">2 <span class="sr-only">(current)</span></a>
            </li>
            <li class="page-item"><a class="page-link" href="/history?page=2">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
{{/hashistory}}
<div>
    <a href="/" class="btn btn-primary">Back</a>
</div>
{{> footer}}